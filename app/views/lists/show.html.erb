
<div class="banner d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.url %>)">
  <div class="pt-2 pb-2">
      <h2><%= @list.name %></h2>
  </div>
</div>



<div class="container">
  <%= link_to 'new movie', new_list_bookmark_path(@list) , class: 'btn btn-primary'%>
    <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-movie">
          <%= image_tag bookmark.movie.poster_url %>
          <div class="card-movie-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
            </div>
            <h2 class="card-movie-pricing btn btn-danger"><%= link_to 'Delete', bookmark_path(bookmark), method: :delete %></h2>
          </div>
        </div>
      <% end %>
    </div>
  <%= link_to 'Back to lists', lists_path %>
</div>
