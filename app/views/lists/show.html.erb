<div class="d-flex justify-content-center align-items-center">
  <div class="pt-2 pb-2">
      <h2><%= @list.name %></h2>
  </div>
</div>


<div class="container">
  <%= link_to 'new movie', new_list_bookmark_path(@list) , class: 'btn btn-primary'%>
    <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="movie-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
          <div class="movie-card-info">
            <p><%= bookmark.movie.title %></p>
            <%= link_to 'Delete from list', bookmark_path(bookmark), method: :delete %>
          </div>
        </div>
      <% end %>
    </div>
  <%= link_to 'Back to lists', lists_path %>
</div>
